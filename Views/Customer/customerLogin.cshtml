
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer Login - QuickBite</title>
</head>
<body style="background-color: #ffffff; font-family: Arial, sans-serif;">

    <div style="width: 100%; max-width: 400px; margin: 50px auto; padding: 20px; border-radius: 8px;
                box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1); background: #f8f9fa;">
        <h2 style="text-align: center; color: #333;">Customer Login to QuickBite</h2>
        <p style="text-align: center; color: #666;">Welcome! Please enter your credentials.</p>

        <form method="post">
            <div style="margin-bottom: 15px;">
                <label for="inputEmail" style="display: block; font-size: 14px; color: #555;">Email address</label>
                <input type="email" id="inputEmail" name="customerEmail" required
                       style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px; font-size: 16px;">
            </div>

            <div style="margin-bottom: 15px;">
                <label for="inputPassword" style="display: block; font-size: 14px; color: #555;">Password</label>
                <input type="password" id="inputPassword" name="customerPassword" required
                       style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px; font-size: 16px;">
            </div>

            <div style="margin-bottom: 15px; display: flex; align-items: center;">
                <input type="checkbox" id="rememberMe" name="rememberMe" style="margin-right: 8px;">
                <label for="rememberMe" style="font-size: 14px; color: #555;">Remember me</label>
            </div>

            <input type="submit" value="Login"
                   style="width: 100%; padding: 10px; background: #007bff; color: white; border: none;
                          border-radius: 5px; font-size: 16px; cursor: pointer;">
        </form>

        <p style="text-align: center; margin-top: 15px; font-size: 14px;">
            Don't have an account? <a href="@Url.Action("customerRegistration","Customer")" style="color: #007bff;">Register here</a>
        </p>
        <div style="margin-top: 15px; text-align: center;">
            <h5 style="color: red;">@ViewBag.message</h5>
        </div>
        
    </div>

</body>
</html>